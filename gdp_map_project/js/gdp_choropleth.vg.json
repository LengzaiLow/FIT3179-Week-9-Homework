{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "padding": 5,
  "config": {
    "background": "#fafbfc",
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "title": {
      "fontSize": 16,
      "color": "#003366",
      "anchor": "start"
    }
  },
  "title": {
    "text": "Global GDP by Country",
    "subtitle": "Select a year with the slider to explore changes in GDP (USD)",
    "anchor": "start"
  },
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "selected_year",
      "value": 2025,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2025,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": { "sphere": {} },
      "mark": {
        "type": "geoshape",
        "fill": "#eaf4ff"
      }
    },
    {
      "data": {
        "url": "js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#d6dee6",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "js/ne_110m_admin_0_countries2.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ffffff",
        "stroke": "#c0c0c0",
        "strokeWidth": 0.3
      }
    },
    {
      "data": {
        "url": "js/ne_110m_admin_0_countries2.json",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": { "url": "data/gdp_2020_2025_long.csv" },
            "key": "country",
            "fields": ["gdp_usd", "year"]
          }
        },
        { "filter": "datum.year == selected_year" }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "color": {
          "field": "gdp_usd",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "zero": false,
            "scheme": "blues"
          },
          "title": "GDP (USD)"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "gdp_usd",
            "type": "quantitative",
            "title": "GDP (USD)",
            "format": "~s"
          }
        ]
      }
    }
  ]
}